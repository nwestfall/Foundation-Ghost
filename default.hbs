<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="{{asset "favicon.ico"}}">

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" type="text/css" href="{{asset "css/foundation.min.css"}}" />
    
    <script type="text/javascript" src="{{asset "js/vendor/modernizr.js"}}"></script>

    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{! Menu in parial }}
    {{>menu}}

    {{! Everything else gets inserted here }}
    <div class="row" style="margin-top: 15px;">
        <div class="large-12 columns">
            {{{body}}}
        </div>
    </div>

    <div class="row">
        <div class="large-12 small-12 columns">
            <h6 class="subheader left hide-for-small">Copyright {{date format="YYYY"}} - <a href="{{@blog.url}}">{{@blog.title}}</a></h6>
            <h6 class="subheader right hide-for-small">Built by <a href="http://nathan.fistbumpstudios.com" target="_blank">Nathan Westfall</a> using <a href="http://foundation.zurb.com" target="_blank">Foundations</a></h6>
            <small class="subheader show-for-small" style="text-align: center;">Copyright {{date format="YYYY"}} - <a href="{{@blog.url}}">{{@blog.title}}</a></small>
            <small class="subheader show-for-small" style="text-align: center;">Built by <a href="http://nathan.fistbumpstudios.com" target="_blank">Nathan Westfall</a> using <a href="http://foundation.zurb.com" target="_blank">Foundations</a></small>
        </div>
    </div>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    {{! Foundation footer scripts}}
    <script type="text/javascript" src="{{asset "js/vendor/jquery.js"}}"></script>
    <script type="text/javascript" src="{{asset "js/foundation.min.js"}}"></script>
    <script>
        $(document).ready(function() {
            $(document).foundation();
        });
    </script>
</body>
</html>
